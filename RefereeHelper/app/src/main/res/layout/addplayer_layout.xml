<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="246dp"
            android:layout_height="39dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add New Player
            "
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="32sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="247dp"
        android:layout_gravity="center">

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/newplayername"
            android:layout_gravity="center_horizontal|top"
            android:textSize="32sp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:id="@+id/team_radio">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue Team"
                android:id="@+id/select_blue_team"
                android:textColor="#0000FF"
                android:textSize="32sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red Team"
                android:id="@+id/select_red_team"
                android:textColor="#FF0000"
                android:textSize="32sp" />

        </RadioGroup>
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="129dp"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="155dp"
            android:layout_height="85dp"
            android:text="Return"
            android:id="@+id/return_button"
            android:layout_gravity="right|center_vertical"
            android:textSize="32sp"
            android:clickable="true" />

        <Button
            android:layout_width="225dp"
            android:layout_height="85dp"
            android:text="Add Player/"
            android:id="@+id/add_player_button"
            android:layout_gravity="left|center_vertical"
            android:textSize="32sp"
            android:clickable="true"
            android:paddingRight="5dp"
            android:layout_marginRight="5dp" />
    </FrameLayout>
</FrameLayout>
